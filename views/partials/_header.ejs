<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    <%if (username) { %>
    <div style="padding: 5px;">
      <form action="/logout" method="POST" input="text">
        <div class="form-group mb-2">
          <label for="username" style="padding: 3px;"><strong>Logged in as: <%= username %>!</strong></label>
          <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
    </div>
    <%} else { %>
    <div>
      <form action="/login" method="POST" input="text">
        <div></div>
          <input class="form-control"
            type="text"
            name="username"
            placeholder="Username"
            style="width: 300px; margin: 1em"
          />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form> 
      <%} %>
    </nav>  
  </nav>
</header>